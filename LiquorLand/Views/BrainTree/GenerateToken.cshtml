<form method="post" asp-action="GenerateToken" id="payment-form">
    <div class="wrapper">
        <div class="checkout container">
            <header>
                <h1 class="text-info">Payment details</h1>
                <p class="text-success">make a payment - using paypal or card</p>
            </header>
            <section>
                <div class="bt-drop-in-wrapper">
                    <div id="dropin-container"></div>
                </div>
            </section>
            <input id="nonce" name="payment_method_nonce" type="hidden" />
            <button class="button" id="submit-button"> <span>Pay</span></button>
        </div>
    </div>
</form>

@section Scripts {
    <script src="http://code.jquery.com/jquery-3.2.1.min.js" crossorigin="anonymous"></script>
    <script src="https://js.braintreegateway.com/web/dropin/1.42.0/js/dropin.min.js"></script>
    <script>
        var client_token = "@ViewBag.ClientToken";
        //bt-dropin
        var form = document.querySelector('#payment-form');
        braintree.dropin.create({
            authorization: client_token,
            container: '#dropin-container',
            paypal: {
                flow: 'vault'
            }
        }, function (createErr, instance) {
            form.addEventListener('submit', function (event) {
                event.preventDefault();
                instance.requestPaymentMethod(function (err, payload) {
                    if (err) {
                        console.log('Error', err);
                        return;
                    }
                    document.querySelector('#nonce').value = payload.nonce;
                    form.submit();
                });
            });
        });
    </script>
}